@{
    ViewData["Title"] = "Online ordering";
}
<div style="margin: 0; padding: 0;">
    <div class="position-relative">
        <img src="~/Images/Mobile_Banner.jpg" alt="Events" class="w-100" style="height: 400px; object-fit: cover; filter: brightness(60%);">
        <div class="position-absolute top-50 start-50 translate-middle text-center text-white" style=" padding: 2rem; width: 100%; max-width: 600px;">
            <h1 class="display-4" style="font-family: 'Bungee Shade', cursive !important; color: #F8FAE5;">Order Online</h1>
        </div>
    </div>
</div>
<div>
    <p>
        Experience the ease of ordering your favorite dishes with our new mobile ordering app! Simply scan the QR code at our restaurant, and you’ll be directed to our menu, where you can customize and place your order—all from your smartphone.

    </p>
    <div class="container my-5">
        <h2 class="text-center">Key Features:</h2>
        <ul class="list-unstyled">
            <li class="mb-4">
                <div class="card-body">
                    <h4>Quick Access:</h4>
                    <p>
                        Scan the QR code at your table to access the menu instantly. No more waiting in line!
                    </p>
                </div>
            </li>
            <li class="mb-4">
                <div class="card-body">
                    <h4>Easy Pickup:</h4>
                    <p>
                        Choose your meals, place your order, and select a pickup time that works for you. Your food will be ready when you arrive.
                    </p>
                </div>
            </li>
            <li class="mb-4">
                <div class="card-body">
                    <h4>Customisable Orders:</h4>
                    <p>
                        Personalise your meal to your liking. Add special requests and dietary preferences with ease.
                    </p>
                </div>
            </li>
        </ul>
    </div>
</div>


