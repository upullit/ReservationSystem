@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "View Reservations";
}

<h2>Reservations</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Guest Name</th>
            <th>Contact</th>
            <th>Sitting</th>
            <th>Time</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var reservation in Model)
        {
            <tr>
                <td>@reservation.Guests.Name</td>
                <td>@reservation.Guests.Contact</td>
                <td>@reservation.Sittings.SittingType</td>
                <td>@reservation.CreatedAt.ToString("h:mm tt")</td>
                <td>@reservation.ReservationStatus</td>
                <td>
                    @Html.ActionLink("Confirm", "ConfirmReservation", new { id = reservation.Id }, new { @class = "btn btn-success btn-sm" }) |
                    @Html.ActionLink("Edit", "Edit", new { id = reservation.Id }, new { @class = "btn btn-primary btn-sm" }) |
                    @Html.ActionLink("Cancel", "Cancel", new { id = reservation.Id }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>