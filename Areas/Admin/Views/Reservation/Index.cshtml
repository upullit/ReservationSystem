@model IEnumerable<ReservationSystem.Models.Reservation>

@{
    ViewData["Title"] = "Reservations List";
}

<div class="container mt-4">
    <h1>All Reservations</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Reservation ID</th>
                <th>Guest Name</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Sitting</th>
                <th>Party Size</th>
                <th>Reservation Status</th>
                <th>Booking Time & Date</th>
                <th>Created At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var reservation in Model)
            {
                <tr>
                    <td>@reservation.Id</td>
                    <td>@reservation.Guest?.Name</td>
                    <td>@reservation.Guest?.Phone</td>
                    <td>@reservation.Guest?.Email</td>
                    <td>@reservation.Sitting?.StartTime.ToString("dd/MM/yyyy hh:mm tt") - @reservation.Sitting?.EndTime.ToString("hh:mm tt")</td>
                    <td>@reservation.PartySize</td>
                    <td>@reservation.ReservationStatus</td>
                    <td>@reservation.BookingTime</td>
                    <td>@reservation.CreatedAt.ToString("dd/MM/yyyy hh:mm tt")</td>
                    <td>
                        <div class="d-flex gap-2">
                            <a asp-action="Details" asp-route-id="@reservation.Id" class="btn btn-info btn-sm">View</a>
                            <a asp-action="Edit" asp-route-id="@reservation.Id" class="btn btn-primary btn-sm">Edit</a>
                            <a asp-action="Delete" asp-route-id="@reservation.Id" class="btn btn-danger btn-sm">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
