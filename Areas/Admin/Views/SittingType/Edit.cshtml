@model ReservationSystem.Models.SittingType

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Edit Sitting Type";
}

<h2>Edit Sitting Type</h2>

<form asp-area="Admin" asp-controller="SittingType" asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-area="Admin" asp-controller="SittingType" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
