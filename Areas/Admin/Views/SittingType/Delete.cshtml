@model ReservationSystem.Models.SittingType

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Delete Sitting Type";
}

<h2>Delete Sitting Type</h2>

<div class="alert alert-danger">
    <p>Are you sure you want to delete this Sitting Type?</p>
</div>

<form asp-area="Admin" asp-controller="SittingType" asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-area="Admin" asp-controller="SittingType" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
